# Port configuration for local development
# Copy this file to .env and customize as needed

# Backend container internal port
BACKEND_PORT=8081

# Backend exposed port on host machine (change if 8082 is already in use)
BACKEND_HOST_PORT=8081

# Frontend exposed port on host machine (change if 3000 is already in use)
FRONTEND_HOST_PORT=3000

# Nginx internal port (keep as 80 unless you have a specific reason to change)
FRONTEND_PORT=80

# Database configuration
# IMPORTANT: Change these values in your .env file!
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_database_name
POSTGRES_HOST_PORT=5432
